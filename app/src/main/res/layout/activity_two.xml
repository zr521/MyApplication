<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TwoActivity"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:background="#ffffff">
    <TextView
        android:id="@+id/two_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="订单号 ："
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/twotextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/two_textview1"
        android:layout_below="@id/two_textview1"
        android:layout_marginTop="5dip"
        android:text="收货人：李四"
        android:textColor="#000000"
        android:textSize="18sp"
      />
    <TextView
        android:id="@+id/twotextview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/twotextview2"
        android:layout_below="@id/twotextview2"
        android:layout_marginTop="5dip"
        android:text="联系电话：136********"
        android:textColor="#000000"
        android:textSize="18sp"
       />
    <TextView
        android:id="@+id/twotextview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/twotextview3"
        android:layout_below="@id/twotextview3"
        android:layout_marginTop="5dip"
        android:text="收货地址：XX省XX市XX县XX街道"
        android:textColor="#000000"
        android:textSize="18sp"
      />
        />
    <TextView
        android:id="@+id/twotextview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/twotextview4"
        android:layout_below="@id/twotextview4"
        android:layout_marginTop="5dip"
        android:text="总金额：113"
        android:textColor="#000000"
        android:textSize="18sp"
       />
    <TableLayout
        android:id="@+id/twoatablelayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/twotextview5"
        android:layout_below="@id/twotextview5"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        >
        <TableRow
            android:id="@+id/twotablerow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:text="商品数量"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_weight="2"
            />
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="5"
            />
    </TableRow>
        <TableRow
            android:id="@+id/twotablerow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:text="伊利牛奶"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_weight="3"
                />
            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_weight="3"
                />
            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_weight="2"
                />
            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="5"
                />
        </TableRow>
    </TableLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/twoatablelayout1"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/twoatablelayout1"
        android:background="#B0EBF9"
        />
    <Button
        android:id="@+id/twobutton"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/twoatablelayout1"
        android:layout_below="@id/spinner"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:textColor="#000000"/>
</RelativeLayout>