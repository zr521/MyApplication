<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/m2bt1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/m2tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 共 享 单 车 "
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/m2bt1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客 服"
            android:textColor="#66B8EE"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <Button
            android:id="@+id/m2bt2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/adress"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="九江市"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/m2bt2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            />

        <RelativeLayout
            android:id="@+id/m2rl1"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:background="@drawable/yuan">

            <Button
                android:id="@+id/m2bt3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m2bt3"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="扫码任意骑"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/m2rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/m2rl1"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
           >
            <Button
                android:id="@+id/m2bt4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/miaozou"
                android:layout_marginLeft="80dp"
               />
            <Button
                android:id="@+id/m2bt5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/haluo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/m2rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/m2rl2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/m2tv2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="喵走出行"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/m2tv3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="哈罗单车"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m2rl3"
            android:layout_centerHorizontal="true"
            >
            <Button
                android:id="@+id/m2bt6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/baozhang"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="享50万骑行安全保障"
                android:textSize="20sp"
                android:textColor="#000000"

                android:layout_toRightOf="@id/m2bt6"
                />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/m2rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/m2bt1_rl4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/hl"
            android:layout_marginLeft="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/m2bt1_rl4"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            >
            <TextView
                android:id="@+id/m2tv3_rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈啰单车"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/m2tv1_rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝专享30天免费骑行"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/m2tv2_rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10城芝麻信用免押"
                android:layout_toRightOf="@id/m2bt1_rl4"

                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/m2rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/m2bt1_rl5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mz"
            android:layout_marginLeft="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/m2bt1_rl5"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            >
            <TextView
                android:id="@+id/m2tv3_rl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喵走单车"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/m2tv1_rl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专享30天免费骑行"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>