<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FourActivity">
    <ImageView
        android:id="@+id/four_imaheview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_monitoring_select"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/four_imaheview1"
        android:orientation="horizontal"
        android:background="@drawable/bg_frame_descend_setting">

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="2"
            >
            <WebView
                android:id="@+id/four_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            >
           <RelativeLayout
               android:layout_width="130dp"
               android:layout_height="130dp"
               android:background="@drawable/btn_direction_bg">
                <ImageView
                    android:id="@+id/four_imleft"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_left_press"
                   />
               <ImageView
                   android:id="@+id/four_imdown"
                   android:layout_height="32dp"
                   android:layout_width="32dp"
                   android:layout_centerHorizontal="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="10dp"
                   android:background="@drawable/btn_down_press"
                   />
               <ImageView
                   android:id="@+id/four_imup"
                   android:layout_height="32dp"
                   android:layout_width="32dp"
                   android:layout_centerHorizontal="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/btn_up_press"
                   />
               <ImageView
                   android:id="@+id/four_imright"
                   android:layout_height="32dp"
                   android:layout_width="32dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/btn_right_press"
                   />
           </RelativeLayout>
            <Button
                android:id="@+id/four_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>